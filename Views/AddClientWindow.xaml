<Window
    x:Class="Muse_Travel_Manager.Views.AddClientWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Muse_Travel_Manager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Muse Travel Manager - Add Client"
    Width="1000"
    Height="550"
    MinWidth="800"
    MinHeight="450"
    mc:Ignorable="d">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ім'я:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="FirstNameTextBox" Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Прізвище:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="LastNameTextBox" Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Телефон:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="PhoneTextBox" Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Електронна адреса:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="EmailTextBox" Margin="0,5" />

            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5"
                    Click="OnSaveClick"
                    Content="Зберегти" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="Cancel"
                    Content="Скасувати" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
