<Window
    x:Class="Muse_Travel_Manager.Views.AddTourWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Muse_Travel_Manager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Muse Travel Manager - Add Tour"
    Width="1000"
    Height="550"
    MinWidth="800"
    MinHeight="450"
    Loaded="LoadData"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пункт призначення:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <ComboBox Name="DestinationComboBox" Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ціна:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="TourPriceTextBox" Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <DatePicker Name="TourDatePicker" Margin="0,5" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Тривалість (дні):" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="DurationTextBox" Margin="0,5" />

            <Button
                Width="150"
                Click="SelectImage"
                Content="Вибрати зображення" />
            <Image
                Name="PreviewImage"
                Width="200"
                Height="120"
                Margin="5"
                Source="{Binding ImagePath, Converter={StaticResource ImagePathToImageSourceConverter}}" />

            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5"
                    Click="SaveTour"
                    Content="Зберегти" />
                <Button
                    Width="100"
                    Margin="5"
                    Click="Cancel"
                    Content="Скасувати" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
