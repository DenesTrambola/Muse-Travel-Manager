<Window
    x:Class="Muse_Travel_Manager.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Muse_Travel_Manager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Muse Travel Manager"
    MinWidth="1600"
    MinHeight="900"
    Loaded="LoadData"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Верхня панель з кнопками  -->
        <StackPanel
            Margin="0,0,0,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="120"
                Margin="5"
                Click="OpenAddTourWindow"
                Content="Додати тур" />
            <Button
                Width="140"
                Margin="5"
                Click="OpenAddClientWindow"
                Content="Додати клієнта" />
            <Button
                Width="160"
                Margin="5"
                Click="OpenAddDestinationWindow"
                Content="Створити напрямок" />
            <Button
                Width="160"
                Margin="5"
                Click="OpenBookingWindow"
                Content="Створити бронювання" />
            <Button
                Width="140"
                Margin="5"
                Click="GenerateReport"
                Content="Згенерувати звіт" />
        </StackPanel>

        <!--  Основний контент  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Список турів  -->
            <DataGrid Name="ToursDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Зображення">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                    Width="50"
                                    Height="50"
                                    Source="{Binding ImagePath, Converter={StaticResource ImagePathToImageSourceConverter}}"
                                    Stretch="UniformToFill" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Destination}"
                        Header="Напрямок туру" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Price, StringFormat={}{0:F2} грн}"
                        Header="Ціна" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding StartDate}"
                        Header="Дата початку" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Duration}"
                        Header="Тривалість" />
                </DataGrid.Columns>
            </DataGrid>


            <!--  Напрямки  -->
            <StackPanel
                Grid.Column="1"
                Margin="5"
                Background="White">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Напрямки" />
                <ListBox Name="DestinationsListBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Description}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding PopularSeason}" />
                                <Image
                                    Width="120"
                                    Height="80"
                                    Margin="0,5"
                                    Source="{Binding ImagePath, Converter={StaticResource ImagePathToImageSourceConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!--  Клієнти  -->
            <StackPanel
                Grid.Column="2"
                Margin="5"
                Background="White">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Клієнти" />
                <ListBox Name="ClientsListBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="2,0"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding FirstName}" />
                                    <TextBlock
                                        Margin="2,0"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding LastName}" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Phone}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Email}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!--  Бронювання  -->
            <StackPanel
                Grid.Column="3"
                Margin="5"
                Background="White">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Бронювання" />
                <ListBox Name="BookingsListBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Tour.Destination}" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="2,0"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding FirstName}" />
                                    <TextBlock
                                        Margin="2,0"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding LastName}" />
                                </StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding BookingDate}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Status}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
