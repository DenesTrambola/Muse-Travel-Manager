<Window
    x:Class="Muse_Travel_Manager.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Muse_Travel_Manager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Muse Travel Manager"
    Width="1000"
    Height="550"
    MinWidth="800"
    MinHeight="450"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Верхня панель з кнопками  -->
        <StackPanel
            Margin="0,0,0,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="120"
                Margin="5"
                Content="Додати тур" />
            <Button
                Width="140"
                Margin="5"
                Content="Додати клієнта" />
            <Button
                Width="160"
                Margin="5"
                Content="Створити напрямок" />
            <Button
                Width="160"
                Margin="5"
                Content="Створити бронювання" />
            <Button
                Width="140"
                Margin="5"
                Content="Згенерувати звіт" />
        </StackPanel>

        <!--  Основний контент  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Список турів  -->
            <DataGrid
                Grid.Column="0"
                AutoGenerateColumns="False"
                Background="White"
                HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Назва" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Price}"
                        Header="Ціна" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Date}"
                        Header="Дата" />
                    <DataGridTemplateColumn Width="100" Header="Зображення">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                    Width="80"
                                    Height="50"
                                    Source="{Binding ImagePath}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!--  Напрямки  -->
            <StackPanel
                Grid.Column="1"
                Margin="10"
                Background="White">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Напрямки" />
                <ListBox ItemsSource="{Binding Destinations}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Name}" />
                                <Image
                                    Width="120"
                                    Height="80"
                                    Margin="0,5"
                                    Source="{Binding ImagePath}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
