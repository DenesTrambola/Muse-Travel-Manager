<Window
    x:Class="Muse_Travel_Manager.Views.AddDestinationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Muse_Travel_Manager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Muse Travel Manager - Add Destination"
    Width="1000"
    Height="550"
    MinWidth="800"
    MinHeight="450"
    mc:Ignorable="d">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Назва напрямку:" />
                <TextBlock
                    Margin="3,0"
                    Foreground="Red"
                    Text="*" />
            </StackPanel>
            <TextBox Name="DestinationNameTextBox" Margin="0,5" />

            <TextBlock Text="Опис:" />
            <TextBox
                Name="DestinationDescriptionTextBox"
                Height="60"
                Margin="0,5"
                AcceptsReturn="True" />

            <TextBlock Text="Популярний сезон:" />
            <ComboBox Name="SeasonComboBox" Margin="0,5">
                <ComboBoxItem Content="Зима" />
                <ComboBoxItem Content="Весна" />
                <ComboBoxItem Content="Літо" />
                <ComboBoxItem Content="Осінь" />
            </ComboBox>

            <Button Width="150" Content="Вибрати зображення" />
            <Image
                Name="PreviewImage"
                Width="200"
                Height="120"
                Margin="5" />

            <Button
                Width="100"
                Margin="10"
                HorizontalAlignment="Center"
                Content="Зберегти" />
        </StackPanel>
    </Grid>
</Window>
